<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate SQL only -->
    <logger name="org.hibernate.SQL" level="debug" />
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" />

    <!-- Suppress all Hibernate startup logs -->
    <logger name="org.hibernate" level="error" />
    <logger name="org.hibernate.orm.connections" level="error" />
    <logger name="org.hibernate.orm.jdbc.bind" level="error" />
    <logger name="org.hibernate.orm.deprecation" level="off" />
    <logger name="org.hibernate.orm.query.function" level="off" /> <!-- hides the function registry dump -->

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
